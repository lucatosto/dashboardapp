<h2 class="page-header">Customer</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/customers/addcustomer">
   <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" placeholder="Name" name="name">
  </div>
  <div class="form-group">
    <label>ID</label>
    <input type="text" class="form-control" placeholder="ID" name="id">
  </div>
   <div class="form-group">
    <label>Link</label>
    <input type="text" class="form-control" placeholder="Link" name="link">
  </div>
  <div class="form-group">
   <label>Google Spreadsheet LINK</label>
   <input type="text" class="form-control" placeholder="Google Spreadsheet LINK" name="spreadsheet">
 </div>
 <div class="form-group">
  <label>Google Spreadsheet ID</label>
  <input type="text" class="form-control" placeholder="Google Spreadsheet ID" name="spreadsheetID">
</div>
 <div class="form-group">
  <label>AWS Billing</label>
  <input type="text" class="form-control" placeholder="AWS Billing" name="awsbilling">
</div>
  <button type="submit" class="btn btn-default">Add new Customer</button>
</form>
